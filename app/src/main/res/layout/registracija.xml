<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="118dp"
        android:text="Korisničko ime" />

    <EditText
        android:id="@+id/unosKorIme"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="160dp"
        android:text="Lozinka" />

    <EditText
        android:id="@+id/unosLozinka"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/unosKorIme"
        android:layout_marginStart="2dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/unosIme"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="-81dp"
        android:layout_toStartOf="@+id/textView2"
        android:ems="10"
        android:hint="Ime"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/unosPrezime"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/unosIme"
        android:layout_alignStart="@+id/unosIme"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Prezime"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/unosAdresa"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/unosPrezime"
        android:layout_alignStart="@+id/unosPrezime"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Adresa"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/unosMail"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/unosAdresa"
        android:layout_alignStart="@+id/unosIme"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="e-mail"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/unosTelefon"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/unosMail"
        android:layout_alignStart="@+id/unosIme"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Broj telefona"
        android:inputType="phone" />

    <EditText
        android:id="@+id/unosMobitel"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/unosTelefon"
        android:layout_alignEnd="@+id/unosIme"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Broj mobitela"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnRegistracijaSpremi"
        android:layout_width="109dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="24dp"
        android:text="Spremi" />

    <Button
        android:id="@+id/btnRegistracijaOdustani"
        android:layout_width="109dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/btnRegistracijaSpremi"
        android:layout_marginStart="-161dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="Odustani" />

    <ImageButton
        android:id="@+id/btnChooseImage"
        android:layout_width="122dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="23dp"
        android:onClick="chooseImage"
        android:scaleType="fitCenter"
        android:src="@drawable/upload_image" />


</RelativeLayout>